<?xml version="1.0" encoding="iso-8859-1"?>
<program_description xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                     xsi:noNamespaceSchemaLocation="../../docs/w3-ws/specificationData/description.xsd">

    <program provider="PUT" name="PROMETHEE-Cluster" displayName="PROMETHEE-Cluster" version="1.0" />
    <documentation>
        <description>Clustering using Promethee Tri and k-means algorithm</description>
        <contact><![CDATA[Mateusz Sarbinowski <mateusz.sarbinowski@student.put.edu.pl>]]></contact>
        <url>https://github.com/dohko93/mcdm/tree/master/PROMETHEE-Cluster</url>
    </documentation>
    <parameters>

        <input id="input1" name="alternatives" displayName="alternatives" isoptional="0">
            <documentation>
                <description>List of alternatives.</description>
            </documentation>
            <xmcda tag="alternatives" />
        </input>
        <input id="input2" name="criteria" displayName="criteria" isoptional="0">
            <documentation>
                <description>Information about criterias required to compute Promethee Tri: criteria id, criteria thresholds (indifference and preference) and criteria scales.</description>
            </documentation>
            <xmcda tag="criteria" />
        </input>
        <input id="input3" name="criteriaValues" displayName="weights" isoptional="0">
            <documentation>
                <description>Weights of criteria to consider.</description>
            </documentation>
            <xmcda tag="criteriaValues" />
        </input>
        <input id="input4" name="performanceTable" displayName="performanceTable" isoptional="0">
            <documentation>
                <description>The performance of alternatives.</description>
            </documentation>
            <xmcda tag="performanceTable" />
        </input>
        <input id="input5" name="programParameters" displayName="programParameters" isoptional="0">
            <documentation>
                <description>First parameter specifies number of output clusters K.
                    Where K is integer greater than 1 and less than number of alternatives.
                    Second parameter specifies parameter P of deviation used in Promethee TRI.
                    In this case deviation is weighted generalised mean of difference between flows on criteria, where P is used exponent.
                </description>
            </documentation>
            <xmcda tag="methodParameters">
                <![CDATA[
            <methodParameters>
        <parameter id="NumberOfClusters">
            <value>
                <integer>%1</integer>
            </value>
        </parameter>
        <parameter id="distance">
                <value>
                    <integer>%2</integer>
                </value>
        </parameter>
    </methodParameters>

        ]]>
            </xmcda>
            <gui status="preferGUI">
                <entry id="%1" type="int" displayName="NumberOfClusters">
                    <constraint>
                        <description>A integer value greater than 1 and lower than the number of alternatives</description>
                        <code><![CDATA[ %1 > 1 ]]></code>
                    </constraint>
                </entry>
                <entry id="%2" type="int" displayName="distance"/>
            </gui>
        </input>

        <output id="output1" name="result" displayName="alternativesSets">
            <documentation>
                <description>List of alternatives sets where each set representing one cluster.</description>
            </documentation>
            <xmcda tag="alternativesSets" />
        </output>

        <output id="output2" name="messages" displayName="messages">
            <documentation>
                <description>Messages or errors generated by this module.</description>
            </documentation>
            <xmcda tag="methodMessages"/>
       </output>

    </parameters>
</program_description>
